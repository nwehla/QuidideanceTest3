{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
   <div class="py-3">
    <a href="{{ path('app_reponse_index') }}" class="btn btn-primary mt-3">Retour au tableau des réponses</a>

   </div>
    <div class="jumbotron text-center py-3">
        <h1>Réponse</h1>
    </div>
    <div class="py-3">
        <table class="table">
            <tbody>
                 <tr>
                <th>Repondant</th>
                <td>{{ reponse.repondant }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ reponse.commentaire }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reponse.email }}</td>
            </tr>
            <tr>
                <th>Acceptationpartagedonnee</th>
                <td>{{ reponse.acceptationpartagedonnee ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{{ reponse.datecreation ? reponse.datecreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Datemiseajour</th>
                <td>{{ reponse.datemiseajour ? reponse.datemiseajour|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Datefermeture</th>
                <td>{{ reponse.datefermeture ? reponse.datefermeture|date('Y-m-d H:i:s') : '' }}</td>
            </tr>          
            </tbody>
        </table>      
    </div>
    {% endblock %}
