{% extends 'base.html.twig' %}

{% block title %}Nouvelle question{% endblock %}

{% block content %}
<div class="container py-3">
    <div class="py-3">
        <a href="{{ path('app_interroger_index') }}" class="btn btn-outline-primary mt-3">Retour au tableau des questions</a>
    
    </div>
        <div class="jumbotron text-center py-3">
            <h1>Ajout d'une nouvelle question</h1>
        </div>
        <div class="py-3">
            {{ form_start(form) }}
            {{ include("interroger/_form.html.twig", {form: form}) }}
            <button class="btn btn-primary">Create</button>
            {{ form_end(form, {render_rest: false}) }}
        </div>    
</div>
{% endblock %}